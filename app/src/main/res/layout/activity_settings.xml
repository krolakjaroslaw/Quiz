<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hp.quiz3.activity.MainMenuActivity">

    <TextView
        android:id="@+id/game_type_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type of Game:"
        android:textColor="#000"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>
    <Switch
        android:id="@+id/game_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Single Player"
        android:textColor="#666"
        android:checked="true"/>

    <TextView
        android:id="@+id/questions_number_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of Questions:"
        android:textColor="#000"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"/>
    <SeekBar
        android:id="@+id/questions_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/background_color_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Background Color:"
        android:textColor="#000"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"/>
    <Spinner
        android:id="@+id/background_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </Spinner>

    <Button
        android:id="@+id/save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zapisz"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>
